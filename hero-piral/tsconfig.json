{
	"compilerOptions": {
		"declaration": true,
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "node",
		"lib": ["DOM", "DOM.Iterable", "ES2020"],
		"jsx": "react-jsx",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./lib",
		"rootDir": "./src"
	},
	"include": ["src"]
}

